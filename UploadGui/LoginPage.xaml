<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UploadGui"
      xmlns:ViewModels="clr-namespace:UploadGui.ViewModels" x:Class="UploadGui.LoginPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>

        <StackPanel HorizontalAlignment="Center" Height="341"  VerticalAlignment="Top" Width="400" Margin="20">
            <Label HorizontalAlignment="Center" Margin="20" Content="Welcome to Playfab"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="300" Margin="10">
                <Label Width="100" Content="Email:" />
                <TextBox Height="22" AutoWordSelection="True" TextWrapping="Wrap" Width="200"  x:Name="UsernameText"  Text="{Binding  Path=Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"  Width="300" Margin="10" >
                <Label Width="100" Content="Password:" />
                <TextBox Height="22" TextWrapping="Wrap"  Width="200" x:Name="PasswordText" Text="{Binding  Path=Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>

            <Button Content="Login" Height="25" Width="100" Margin="10" Command="{Binding LoginCommand}" >
    
            </Button>


        </StackPanel>
    </Grid>
</Page>
